
<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>

 <div class="form-group">
  <p>Title</p>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
  <p>Opinion</p>
  <%= f.text_area :body %>
  </div>

 <div class="form-group"><%= f.submit 'Create Book', class: 'btn btn-success '%></div>

<% end %>