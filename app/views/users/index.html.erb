<html lang="ja">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <script src="https://kit.fontawesome.com/15f7d4a3aa.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="style3.css" />
  <title>Bookers2</title>
</head>

<body>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
              <% @users.each do |user| %>
            <tbody>
              <td><%= link_to attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tbody>
              <% end %>
         </thead>
        </table>
      </div>

    </div>
</div>
</body>